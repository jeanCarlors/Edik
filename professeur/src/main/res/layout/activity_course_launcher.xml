<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CourseLauncher">

    <TextView
        android:id="@+id/tv_course_chapter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Chapitre du cours"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="100dp"
        android:textAllCaps="true"/>
    <EditText
        android:id="@+id/edt_course_chapter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:inputType="text"
        android:hint="Ex: Chapitre 1: Les nombres entiers"/>



    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Titre du cours"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"/>
    <EditText
        android:id="@+id/edt_course_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:inputType="text"
        android:hint="Ex: Operations avec les nombres entiers"/>


    <TextView
        android:id="@+id/tv_course_subject"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Matiere"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"/>
    <EditText
        android:id="@+id/edt_course_subject"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:inputType="text"
        android:hint="Ex: Algebre"/>

    <Button
        android:id="@+id/course_launcher_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lancer le cours"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"/>

</LinearLayout>