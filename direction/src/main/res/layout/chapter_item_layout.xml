<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/chapter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Chapter 1"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@id/chapter_text"
        android:background="@drawable/shadow">

        <ImageButton
            android:id="@+id/chapter_img_item"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/edik_content"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:onClick="onMathBtnClicked"/>

        <TextView
            android:id="@+id/chapter_text_item"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cliquez ici pour avoir tous les contenus maths."
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#ffffff"/>
    </LinearLayout>
</RelativeLayout>
