<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:padding="5dp">

    <TextView
        android:id="@+id/chapter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="Chapter 1"
        android:textAllCaps="true"
        android:visibility="gone" />

    <ImageButton
        android:contentDescription="@string/app_name"
        android:id="@+id/chapter_img_item"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="10dp"
        android:onClick="onMathBtnClicked"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_bookmarks_64" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chapter_text"
        android:layout_toRightOf="@id/chapter_img_item"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapitre"/>


        <TextView
            android:id="@+id/chapter_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:maxLines="3"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Cliquez ici pour avoir tous les contenus maths." />
    </LinearLayout>
</RelativeLayout>
